pipeline{
    agent{
        docker{
            image 'python:2.7.16-slim'
        }
    }
    
    stages{
        stage("Build"){
            when{
                changeset "**/vote/**"
                }
            steps{
                echo 'Building Vote..'
                dir('vote'){
                sh 'pip install -i requirements.txt'
                }
            }
        }
        stage("Test"){
            when{
               changeset "**/vote/**"
                }
            steps{
                echo 'Testing vote..'
                dir('vote'){
                sh 'nosttests -v'
                }
            }
        }
    }
} 
