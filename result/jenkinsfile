pipeline{
    agent any
    
    tools{
        nodejs 'NodeJS14'
    }
    
    stages{
        stage("Build"){
            when{
                changeset "**/result/**"
                }
            steps{
                echo 'Building result..'
                dir('result'){
                sh 'npm install'
               }
            }
        }
        stage("Test"){
            when{
                changeset "**/result/**"
                }
            steps{
                echo 'Testing result..'
                dir('result'){
                sh 'npm test'
               }
            }
        }
    }
}
